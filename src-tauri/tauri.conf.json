{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DroidGear",
  "version": "0.3.7",
  "identifier": "com.droidgear.app",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' tauri: ipc: http://ipc.localhost"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Your Name",
    "category": "DeveloperTool",
    "shortDescription": "BYOK Model Configuration for Factory Droid",
    "longDescription": "DroidGear - Configure custom models for Factory Droid with BYOK (Bring Your Own Key) support.",
    "copyright": "Copyright Â© 2025. All rights reserved.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Sunshow/droidgear/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY1MzZFQkVGQzBDQUREQTUKUldTbDNjckE3K3MyOVRQd3p0ZUlRTElySzJ0T2NnOE9iTUFNUUFNS1JoVkRIeXJvMld6bkIrekgK"
    }
  }
}
